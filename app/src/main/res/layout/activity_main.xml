<?xml version="1.0" encoding="utf-8"?>
<!-- Modern, unique, and visually improved UI using Material3 components and a card layout -->
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient"
    tools:context=".MainActivity">

    <!-- AppBar with logo/title -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/topAppBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        app:title="@string/app_name"
        app:titleTextAppearance="@style/TextAppearance.Material3.DisplayMedium"
        app:titleCentered="true"
        app:navigationIconTint="@color/primaryColor" />

    <!-- Main Card -->
    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:layout_gravity="center"
        app:cardCornerRadius="32dp"
        app:cardElevation="12dp"
        app:cardBackgroundColor="@color/cardBgColor">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="28dp"
            android:gravity="center_horizontal">

            <!-- Title -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:textSize="40sp"
                android:fontFamily="@font/rubik_moonrocks_regular"
                android:textStyle="bold"
                android:textColor="@color/primaryColor"
                android:layout_marginBottom="16dp" />

            <!-- URL Input -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Input URL"
                style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
                app:boxBackgroundMode="filled"
                app:boxCornerRadiusTopStart="16dp"
                app:boxCornerRadiusTopEnd="16dp"
                app:boxCornerRadiusBottomStart="16dp"
                app:boxCornerRadiusBottomEnd="16dp"
                app:boxBackgroundColor="@color/inputBgColor"
                android:layout_marginBottom="18dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etURL"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:inputType="textUri" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Shorten URL"
                style="@style/Widget.Material3.Button.Tonal"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:layout_marginBottom="18dp"
                app:cornerRadius="16dp"
                app:iconPadding="8dp"
                app:iconTint="@color/white"
                app:backgroundTint="@color/primaryColor"
                android:textColor="@color/white" />

            <!-- Result Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="18dp"
                app:cardElevation="6dp"
                app:cardBackgroundColor="@color/resultCardBg"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvURL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Shortened URL will appear here"
                        android:textSize="16sp"
                        android:textColor="@color/primaryColor"
                        android:paddingBottom="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnCopy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Copy URL"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:textAllCaps="false"
                        android:textSize="14sp"
                        app:cornerRadius="12dp"
                        app:iconTint="@color/primaryColor"
                        app:strokeColor="@color/primaryColor"
                        app:strokeWidth="2dp"
                        android:textColor="@color/primaryColor"
                        android:layout_gravity="end" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.coordinatorlayout.widget.CoordinatorLayout>

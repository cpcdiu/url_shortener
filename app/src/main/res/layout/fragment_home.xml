<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- App Title with subtle improvements -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="32dp"
            android:fontFamily="@font/rubik_moonrocks_regular"
            android:letterSpacing="0.03"
            android:text="Shortly"
            android:textColor="@color/primaryColor"
            android:textSize="36sp"
            android:textStyle="bold" />

        <!-- Enhanced Card for URL Shortener -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="@color/cardBgColor"
            app:cardCornerRadius="24dp"
            app:strokeColor="#11000000"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/inputBgColor"
                android:padding="20dp">

                <EditText
                    android:id="@+id/etURL"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:hint="Enter your URL here"
                    android:background="@drawable/text_input_bg"
                    />

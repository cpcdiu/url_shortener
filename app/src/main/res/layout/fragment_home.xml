<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="32dp">

        <!-- App Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shortly"
            android:textSize="40sp"
            android:fontFamily="@font/rubik_moonrocks_regular"
            android:textStyle="bold"
            android:textColor="@color/primaryColor"
            android:layout_marginBottom="24dp" />

        <!-- Card for URL Shortener -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="28dp"
            app:cardElevation="10dp"
            app:cardBackgroundColor="@color/cardBgColor"
            android:layout_marginBottom="32dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- URL Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Paste your URL here"
                    app:boxBackgroundMode="filled"
                    app:boxCornerRadiusTopStart="16dp"
                    app:boxCornerRadiusTopEnd="16dp"
                    app:boxCornerRadiusBottomStart="16dp"
                    app:boxCornerRadiusBottomEnd="16dp"
                    app:boxBackgroundColor="@color/inputBgColor"
                    android:layout_marginBottom="18dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etURL"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:inputType="textUri" />
                </com.google.android.material.textfield.TextInputLayout>

                <!-- Shorten Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSubmit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Shorten URL"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    app:cornerRadius="16dp"
                    app:iconPadding="8dp"
                    app:iconTint="@color/white"
                    app:backgroundTint="@color/primaryColor"
                    android:textColor="@color/white"
                    android:layout_marginBottom="10dp" />

                <!-- Result Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="4dp"
                    app:cardBackgroundColor="@color/resultCardBg"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/tvURL"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Shortened URL will appear here"
                            android:textSize="16sp"
                            android:textColor="@color/primaryColor"
                            android:paddingBottom="8dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCopy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Copy URL"
                            android:textAllCaps="false"
                            android:textSize="14sp"
                            app:cornerRadius="12dp"
                            app:iconTint="@color/primaryColor"
                            app:strokeColor="@color/primaryColor"
                            app:strokeWidth="2dp"
                            android:textColor="@color/primaryColor"
                            android:layout_gravity="end" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- ProgressBar for loading -->
                <ProgressBar
                    android:id="@+id/progressBar"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:layout_gravity="center"
                    android:indeterminate="true"
                    android:visibility="gone"
                    style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
